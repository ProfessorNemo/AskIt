{
    "name": "ask-it",
    "private": true,
    "dependencies": {
        "@hotwired/turbo-rails": "^7.1.3",
        "@popperjs/core": "^2.11.5",
        "@rails/actioncable": "^6.1.6",
        "@rails/activestorage": "^6.1.6",
        "autoprefixer": "^10.4.7",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.8.3",
        "esbuild": "^0.14.49",
        "postcss": "^8.4.14",
        "postcss-cli": "^10.0.0",
        "sass": "^1.53.0",
        "tom-select": "^2.1.0"
    },
    "version": "0.1.0",
    "browserslist": [
        "defaults"
    ],
    "packageManager": "yarn@3.2.1",
    "scripts": {
        "build:css:dev": "sass --style compressed ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
        "build:css": "build:css:dev && postcss ./app/assets/builds/application.css --replace --use autoprefixer --no-map",
        "build": "esbuild app/javascript/*.* --bundle --minify --outdir=app/assets/builds --public-path=assets"
    }
}
